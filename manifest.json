{
    "name": "bookLevel2",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Google Chrome extention for adding book level",

    "browser_action": {
        "default_icons":"./static/icons/knowledge.png",
        "default_title": "booklevel",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "./static/icons/knowledge.png"
        }
    },
    // "background": {
    //     "scripts": [
    //     //   "js/background.js"
    //     ],
    //     "persistent": false
    // },
    // "background":{
    //     "scripts":["evntPage.js"],
    //     "persistent":false
    // },
    "content_scripts": [
        {
            "js": [
                // "./js/jquery.min.js",
                "./js/contentScript.js",
                "./js/level.js"
                // "./js/popup.js"
            ],
            "matches": [
                "http://*/*",
                "https://www.amazon.co.jp/*"
            ],
            "css":[
                "./static/css/contentScripts.css"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*",
        "storage",
        "https://www.amazon.co.jp/*"
    ]
}
